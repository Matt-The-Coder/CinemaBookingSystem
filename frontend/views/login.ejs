<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../static/Assets/head-icon.png" type="image/png">
    <link rel="stylesheet" href="../static/css/login/index.css">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
<div class="main-form">
     <div class="description">
        <div class="top"><h1>WELCOME TO <span>CINEMABOOK</span></h1>
        </div>
        <div class="mid">
            <pre>Step into a world of entertainment 
with our easy and 
hassle-free booking system.</pre>
        </div>
        <div class="bottom"></div>


     </div>
    
     <div class="login-form">
        <h1>Login</h1>
<form action="/login" method="post">
 <Label for="name">Username</Label>
 <input type="text" id="name" name="userName" placeholder="Enter your name" required>
 <Label for="password">Password</Label>
 <input type="password" id="password" name="password" placeholder="Enter your password" required>
 <div class="btn">
    <button type="submit" id="login-btn" 
    <% if (messages.error ){ %>
     onclick="showMessage('<%=messages.error%>')"
    <% } %>
     
     >Login</button>
    <button><a href="/register">Register</a></button>
 </div>
 

</form>
  <button id="backbtn"><a href="/">Back to Homepage</a></button>
     </div>
</div>

</body>
<script>
   const showMessage = (message) =>{
      alert(message)  
   }
 
   
</script>
</html>